<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mousty.condorcet.be.gestion_score.be.mousty.intent.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/et_login_username"
        android:hint="My login" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_login_pwd"
        android:layout_alignLeft="@+id/et_login_pwd"
        android:layout_alignStart="@+id/et_login_pwd"
        android:layout_marginTop="16dp"
        android:id="@+id/btn_connect"
        android:elevation="10dp"
        android:onClick="save_data" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_error" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/btn_connect"
        android:layout_alignRight="@+id/btn_cancel"
        android:layout_alignEnd="@+id/btn_cancel"
        android:layout_marginTop="32dp"
        android:id="@+id/et_new_username"
        android:hint="My login" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/et_login_pwd"
        android:layout_below="@+id/et_login_username"
        android:layout_alignLeft="@+id/et_login_username"
        android:layout_alignStart="@+id/et_login_username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_new_pwd1"
        android:layout_below="@+id/et_new_username"
        android:layout_alignLeft="@+id/et_new_username"
        android:layout_alignStart="@+id/et_new_username"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/et_new_pwd1"
        android:layout_alignRight="@+id/et_new_pwd1"
        android:layout_alignEnd="@+id/et_new_pwd1"
        android:layout_marginTop="18dp"
        android:id="@+id/et_new_pwd2" />

    <Button
        android:text="Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_new_sign_up"
        android:layout_below="@+id/et_new_pwd2"
        android:layout_alignLeft="@+id/et_new_pwd2"
        android:layout_alignStart="@+id/et_new_pwd2" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancel"
        android:layout_below="@+id/et_new_pwd2"
        android:layout_alignLeft="@+id/btn_sign_up"
        android:layout_alignStart="@+id/btn_sign_up" />

    <Button
        android:text="Sign up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sign_up"
        android:layout_above="@+id/et_new_username"
        android:layout_alignRight="@+id/et_login_pwd"
        android:layout_alignEnd="@+id/et_login_pwd" />
</RelativeLayout>
