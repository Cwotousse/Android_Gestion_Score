<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mousty.condorcet.be.gestion_score.be.mousty.intent.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="265dp"
        android:id="@+id/rl_connect"
        android:layout_marginTop="15dp">

        <Button
            android:text="@string/btn_create"
            style="@style/buttonDefault"
            android:id="@+id/btn_sign_up"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
             />

        <Button
            android:text="@string/btn_connect"
            style="@style/buttonDefault"
            android:id="@+id/btn_connect"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            style="@style/etDefault"
            android:inputType="textPersonName"
            android:id="@+id/et_login_username"
            android:hint="@string/et_login"
            android:layout_above="@+id/et_login_pwd"
            android:layout_alignLeft="@+id/et_login_pwd"
            android:layout_alignStart="@+id/et_login_pwd"
            android:layout_marginBottom="15dp"
            android:layout_alignRight="@+id/et_login_pwd"
            android:layout_alignEnd="@+id/et_login_pwd" />

        <EditText
            style="@style/etDefault"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_login_pwd"
            android:hint="@string/et_pwd"
            android:layout_above="@+id/btn_sign_up"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_new_account"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="15dp">

        <Button
            android:text="@string/btn_cancel"
            style="@style/buttonDefault"
            android:id="@+id/btn_cancel"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp" />

        <Button
            android:text="@string/btn_sign_up"
            style="@style/buttonDefault"
            android:id="@+id/btn_new_sign_up"
            android:layout_alignBaseline="@+id/btn_cancel"
            android:layout_alignBottom="@+id/btn_cancel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            style="@style/etDefault"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_new_pwd2"
            android:hint="@string/et_pwd"
            android:layout_marginBottom="16dp"
            android:layout_above="@+id/btn_cancel"
            android:layout_centerHorizontal="true" />

        <EditText
            style="@style/etDefault"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_new_pwd1"
        android:hint="@string/et_pwd"
            android:layout_above="@+id/et_new_pwd2"
            android:layout_alignLeft="@+id/et_new_pwd2"
            android:layout_alignStart="@+id/et_new_pwd2" />

        <EditText
            style="@style/etDefault"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_new_username"
            android:hint="@string/et_login"
            android:layout_above="@+id/et_new_pwd1"
            android:layout_alignLeft="@+id/et_new_pwd1"
            android:layout_alignStart="@+id/et_new_pwd1" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_error" />

    <ImageView
        android:id="@+id/iv_mojojojo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mojojojo2"
        android:layout_marginTop="65dp"
        android:layout_alignTop="@+id/rl_connect"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
